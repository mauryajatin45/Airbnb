<% layout('layouts/boilerplate') %>

<body>
  <div class="container my-4">
    <h3 class="text-center mb-3"><%= particularBnb.title %></h3>
    
    <!-- Description -->
    <p><%= particularBnb.description %></p>
    
    <!-- Image -->
    <img src="<%= particularBnb.url %>" alt="image" class="img-fluid rounded" width="250px" />
    
    <!-- Price -->
    <p class="mt-2"><strong>Price:</strong> â‚¹<%= particularBnb.price %> per night</p>
    
    <!-- Location & Country -->
    <p><strong>Location:</strong> <%= particularBnb.location %></p>
    <p><strong>Country:</strong> <%= particularBnb.country %></p>
    
    <!-- Edit Button -->
    <div class="mb-3">
      <a href="http://localhost:3000/listings/<%= particularBnb.id %>/edit" class="btn btn-warning">Edit Place</a>
    </div>
    
    <!-- Delete Form -->
    <form action="/listings/<%= particularBnb.id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
</body>
