<% layout('layouts/boilerplate') %>

<body>
  <div class="container my-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12">
        <h3 class="text-center mb-4">Edit Listing</h3>
        <form action="/listings/<%= particularBnb.id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
          
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" name="title" class="form-control" id="title" value="<%= particularBnb.title %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a Title</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="description" id="description" required class="form-control" rows="6"><%= particularBnb.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a Description</div>
          </div>

          <div class="mb-3">
            Original Image <br>
            <img src="<%= originalurl %>" alt="">
          </div>

          <div class="mb-3">
            <label for="url" class="form-label">Upload Image</label>
            <input type="file" name="url" class="form-control" id="url"/>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Invalid image URL</div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Price:</label>
              <input type="number" name="price" class="form-control" id="price" value="<%= particularBnb.price %>" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Invalid Price</div>
            </div>

            <div class="col-md-8 mb-3">
              <label for="country" class="form-label">Country:</label>
              <input type="text" name="country" class="form-control" id="country" value="<%= particularBnb.country %>" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Enter a valid Country</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" name="location" class="form-control" id="location" value="<%= particularBnb.location %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a valid Location</div>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
