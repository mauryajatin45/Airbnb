<% layout('layouts/boilerplate') %>

<body>
  <div class="container my-4">
    <h3 class="text-center mb-4">Edit Listing</h3>
    <form action="/listings/<%= particularBnb.id %>?_method=PUT" method="POST">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="title" class="form-control" id="title" value="<%= particularBnb.title %>" required />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="description" id="description" required class="form-control" rows="4"><%= particularBnb.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <input type="number" name="price" class="form-control" id="price" value="<%= particularBnb.price %>" required />
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" name="location" class="form-control" id="location" value="<%= particularBnb.location %>" required />
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input type="text" name="country" class="form-control" id="country" value="<%= particularBnb.country %>" required />
      </div>

      <div class="mb-3">
        <label for="url" class="form-label">Image URL:</label>
        <input type="text" name="url" class="form-control" id="url" value="<%= particularBnb.url %>" />
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
  </div>
</body>
